<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E5E5"
    android:paddingTop="5dp"

    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.example.ferooz.horticulture.LandCropDetailsHomePageActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:paddingTop="20dp"
    android:layout_marginTop="10dp"
    android:paddingRight="1dp"
    android:elevation="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:layout_height="match_parent"
        android:text="NOTE:"
        android:textStyle="bold"/>
    <TextView
        android:layout_weight="8.7"
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#e91e63"
        android:textStyle="italic"
        android:inputType="textMultiLine"
        android:text="Go through step by step procedure to provide all the information about your land, So that we can advice you better to grow your yeild." />
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:background="#ffffff"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="8"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:textColor="#000000"
                android:gravity="center|center_vertical"
                android:text="[I]" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:textColor="#000000"
                android:text="Capture Corner Details" />
        </LinearLayout>
    <Button
        android:id="@+id/startCorner"

        android:background="@drawable/custombutton1"
        android:layout_width="40dp"
        android:layout_marginRight="2dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_height="40dp"
        android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:elevation="8dp">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="8"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000000"
            android:text="[II]"
            android:layout_weight="1.3" />
    <TextView
        android:layout_width="0dp"
        android:text="Capture Center of the farm"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="8" />
</LinearLayout>

        <Button
            android:id="@+id/startCenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"
            android:background="@drawable/custombutton1"
            android:text=""
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="8dp"
        android:background="#ffffff"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:text="[III]"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="9"
                android:gravity="center"
                android:textColor="#000000"
                android:text="Questanary about farm"
                android:layout_height="match_parent" />
        </LinearLayout>

    <Button
        android:id="@+id/startQuestinaaire"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="2dp"
        android:background="@drawable/custombutton1"
        android:text=""
        android:textColor="#ffffff" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom">
        <!-- <Button
        android:id="@+id/BackLandCropHomepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
            android:layout_marginBottom="5dp"
        android:background="@drawable/customloginbutton"
        android:text="Back"
        android:textColor="#ffffff" />-->

        <Button
            android:id="@+id/startUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"


            android:background="@drawable/customloginbutton"
            android:text="UPLOAD LAND DETAILS"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>
