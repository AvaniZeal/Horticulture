<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/list_border">

    <ImageView
        android:id="@+id/bitmap"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.8"


        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/advisorImages"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="Dr.Ferooz Shickh"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Subject"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/advisorNames"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="#6D6968"
            android:text="Horticulture department"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/advised_dates"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/advisorNames"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="Bangalore"
            android:textColor="#6D6968"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6D6968"
            android:text="26/04/16"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6D6968"
            android:text="12:39 Pm"
            android:textSize="15dp" />
    </LinearLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/advisorImages"/>-->

</LinearLayout>