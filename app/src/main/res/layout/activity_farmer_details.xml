<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/loginbackground"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    tools:context="com.example.ferooz.horticulture.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:text="Personal Details"
            android:gravity="center"
             />
        <View
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"
            >

        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewNameLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:layout_weight="3.5"
            android:textSize="20sp"
            android:textColor="#C0C0C0"
            android:text="Name         :"
             />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6.5"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:gravity="center_vertical"
                android:text="Abc Def" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
        <TextView
            android:id="@+id/textView2Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:textSize="20sp"
            android:textColor="#C0C0C0"
            android:text="Mobile        :"
            />

        <TextView
            android:id="@+id/textViewMobileNumber"
            android:layout_width="0dp"
            android:layout_weight="6.5"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Abc Def"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
        <TextView
            android:id="@+id/textView3Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:textSize="20sp"
            android:textColor="#C0C0C0"
            android:text="Village        :    "
             />

        <TextView
            android:id="@+id/textViewVillageName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:text="Abc Def"
             />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
        <TextView
            android:id="@+id/textViewSelectCrop"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:textSize="20sp"
            android:textColor="#C0C0C0"
            android:layout_height="wrap_content"
            android:text="Crop            :"
         />
        <Spinner
            android:id="@+id/spinnerCrops"
            android:layout_width="0dp"
            android:layout_weight="6.5"
            android:textSize="15sp"
            android:layout_height="wrap_content"
           />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/startButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custombutton1"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
       />
</RelativeLayout>
